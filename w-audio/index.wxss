.w-audio {
	font-size: 20rpx;
	color: #fff;
	display: flex;
	align-items: center;
	text-align: left;
	box-sizing: border-box;
	background-color: #fff;
	padding: 18rpx 20rpx;
	border-radius: 6rpx;
	box-shadow: 2px 2px 3px rgba(204, 204, 204, 0.452);
}

.w-audio .poster {
	padding-right: 12px;
}

.w-audio .poster image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}

.w-audio .infos {
	flex: 1;
	font-size: 28rpx;
	/* border: 1px solid red; */
}

.w-audio .infos .desc {
	padding-left: 12px;
}

.w-audio .infos .time {
	font-size: 20rpx;
	color: rgb(235, 235, 235);
	padding-left: 12px;
}

.w-audio .btns {
	padding-left: 12px;
	display: flex;
	align-items: center;
}

.wc-btn {
	width: 75rpx;
	height: 75rpx;
	border-radius: 50%;
	display: inline-block;
	box-shadow: 2px 2px 5px rgba(194, 194, 193, 0.856);
	position: relative;
}

.wc-btn-hover {
	transition: 0.1s;
	box-shadow: 2px 2px 5px rgba(160, 159, 159, 0.856);
}

.wc-btn.reset,
.wc-btn.stop {
	margin-left: 100rpx;
}

.wc-btn .icon-container {
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.wc-btn .text-contaienr {
	padding-top: 12rpx;
}

.wc-btn .icon-container image {
	width: 50%;
	height: 50%;
	display: inline-block;
}

.wc-btn.speed {
	text-align: center;
	margin-left: 12px;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 28rpx;
}

.wc-btn.loading {
	animation: loading 1.5s linear infinite;
}

@keyframes loading {
	0% {
		transform: rotate(0deg);
	}

	100% {
		transform: rotate(360deg);
	}
}